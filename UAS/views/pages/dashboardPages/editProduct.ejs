<button class="addBackBtn">back</button>
<h2>Edit Produk</h2>
<form
  action="/product/edit/<%= product._id %>"
  class="container"
  method="POST"
  enctype="multipart/form-data"
>
  <div class="row">
    <p class="col-lg-2">Nama Produk :</p>
    <input class="col" type="text" name="name" value="<%= product.name %>" />
  </div>
  <div class="row">
    <p class="col-lg-2">Harga :</p>
    <input class="col" type="number" name="price" value="<%= product.price %>" />
  </div>
  <div class="row">
    <p class="col-lg-2">Kategori :</p>
    <select class="col" name="category" id="">
      <% categories.forEach(c => { %>
      <option value="<%= c.nama %>"><%= c.nama %></option>
      <% }) %>
    </select>
  </div>
  <div class="row">
    <p class="col-lg-2">Merk :</p>
    <select class="col" name="brand" id="">
      <% brands.forEach(b => { %>
      <option value="<%= b.nama %>"><%= b.nama %></option>
      <% }) %>
    </select>
  </div>
  <div class="row">
    <p class="col-lg-2">Stok :</p>
    <input class="col" type="number" name="stock" value="<%= product.stock %>" />
  </div>
  <div class="row">
    <p class="col-lg-2">Foto Produk :</p>
    <input class="col" type="file" name="fotoProduk" value="<%= product.image %>" />
  </div>
  <div class="row">
    <p class="col-lg-2">Deskripsi :</p>
    <textarea
      class="col"
      name="description"
      id=""
      cols="50"
      rows="10"
      style="vertical-align: text-top"
    >
<%= product.name %>
    </textarea>
  </div>
  <section class="row my-2">
    <p class="col-lg-2"></p>
    <input
      id="add-product-submit"
      class="col-lg-3"
      type="submit"
      value="Tambahkan Produk"
    />
  </section>
</form>
